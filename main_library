local SokaHubUI = require(script.Parent.SokaHubUI) -- Adjust the path accordingly

-- Create a new window
local window = SokaHubUI:CreateWindow("My SokaHub")

-- Create a new tab
local tab = window:CreateTab("Main Tab")

-- Create a section within the tab
local section = tab:CreateSection("Controls")

-- Add a button to the section
section:NewButton("Click Me", "This is a button", function()
    print("Button clicked!")
end)

-- Add a toggle to the section
section:NewToggle("Enable Feature", "Toggle this feature", function(state)
    print("Feature enabled:", state)
end)

-- Add a slider to the section
section:NewSlider("Adjust Value", "Slide to adjust", 100, 0, function(value)
    print("Slider value:", value)
end, 50) -- Default value set to 50

-- Show the UI
window:ToggleUI()
